<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="hinojalrobledo.myapplication.activities.RegisterUser">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE USUARIO"
        android:textSize="25sp"
        android:layout_gravity="center"

    />

    <EditText
        android:id="@+id/etEmailUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
    />

    <EditText
        android:id="@+id/etNameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="text"
    />

    <EditText
        android:id="@+id/etSurnameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellidos"
        android:inputType="text"
    />

    <EditText
        android:id="@+id/etPasswordUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
    />

    <EditText
        android:id="@+id/etPhoneNumberUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero de telefono"
        android:inputType="number"
    />

    <Button
        android:id="@+id/btRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ACEPTAR"
        android:background="@drawable/borders_buttons"
        android:textSize="20sp"
        android:width="150dp"
    />
</LinearLayout>
